<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    tools:ignore="HardcodedText">

    <ImageButton
        android:id="@+id/shuffle_button"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginStart="10dp"
        android:background="@android:color/transparent"
        android:contentDescription="shuffle_button"
        android:scaleType="centerCrop"
        android:src="@drawable/shuffle_button_orange"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:text="Shuffle audios"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/shuffle_button"
        app:layout_constraintLeft_toRightOf="@+id/shuffle_button"
        app:layout_constraintTop_toTopOf="@+id/shuffle_button" />

    <ImageButton
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:contentDescription="filter_button"
        android:src="@drawable/baseline_filter_list_250"
        android:scaleType="centerInside"
        android:background="@android:color/transparent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginEnd="25dp"
        />


</androidx.constraintlayout.widget.ConstraintLayout>